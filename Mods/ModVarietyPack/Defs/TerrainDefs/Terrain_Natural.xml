  <!-- 
    Base        cultivated soil    (Fertility 1.0) 
    Tier I      fertilized soil    (Fertility 1.5)
    Tier II     watered soil       (Fertility 2.0)
    Tier III    enriched soil      (Fertility 2.5)
    Tier IV     =Tier III
  -->

  <TerrainDef>
    <defName>SoilCultivated</defName>
    <label>cultivated soil</label>
    <texturePath>Terrain/SoilCultivated</texturePath>
    <Description>Cultivated soil for growing plants.</Description>
    <EdgeType>FadeRough</EdgeType>
    <RenderPrecedence>50</RenderPrecedence>
    <PathCost>2</PathCost>
    <statBases>
      <WorkToMake>1500</WorkToMake>
      <Beauty>0</Beauty>
    </statBases>
    <affordances>
      <li>Light</li>
      <li>Heavy</li>
      <li>GrowSoil</li>
      <li>Diggable</li>
    </affordances>
    <TerrainFilthDef>FilthDirt</TerrainFilthDef>
    <Fertility>1.0</Fertility>
    <TakeFootprints>True</TakeFootprints>
    <terrainAffordanceNeeded>GrowSoil</terrainAffordanceNeeded>
    <constructEffect>ConstructDirt</constructEffect>
    <designationCategory>ProductionFood</designationCategory>
  </TerrainDef>

  <TerrainDef Class="CommunityCoreLibrary.TerrainWithComps">
    <defName>SoilFertilized</defName>
    <label>fertilized soil</label>
    <texturePath>Terrain/SoilFertilized</texturePath>
    <Description>Fertilized soil. For plants that need more nutrition to grow. Soil must be cultivated first.</Description>
    <EdgeType>FadeRough</EdgeType>
    <RenderPrecedence>50</RenderPrecedence>
    <PathCost>2</PathCost>
    <statBases>
      <WorkToMake>1000</WorkToMake>
      <Beauty>0</Beauty>
    </statBases>
    <affordances>
      <li>Light</li>
      <li>Heavy</li>
      <li>GrowSoil</li>
      <li>Diggable</li>
    </affordances>
    <CostList>
      <Mulch>5</Mulch>
    </CostList>
    <TerrainFilthDef>FilthDirt</TerrainFilthDef>
    <Fertility>1.5</Fertility>
    <TakeFootprints>True</TakeFootprints>
    <terrainAffordanceNeeded>GrowSoil</terrainAffordanceNeeded>
    <constructEffect>ConstructDirt</constructEffect>
    <comps>
      <li Class="CommunityCoreLibrary.RestrictedPlacement_Properties">
        <compClass>CommunityCoreLibrary.RestrictedPlacement_Comp</compClass>          
        <terrainDefs>
            <li>SoilCultivated</li>
        </terrainDefs>                
      </li>
    </comps>
    <placeWorkers>
      <li>CommunityCoreLibrary.PlaceWorker_OnlyOnTerrain</li>
    </placeWorkers>
    <designationCategory>ProductionFood</designationCategory>
    <researchPrerequisite>AgricultureII</researchPrerequisite>
  </TerrainDef>

