      <Cloth>10</Cloth>
    </costList>
    <statBases>
      <WorkToMake>1200</WorkToMake>
      <MarketValue>60</MarketValue>
      <AccuracyTouch>0.5</AccuracyTouch>
      <AccuracyShort>0.5</AccuracyShort>
